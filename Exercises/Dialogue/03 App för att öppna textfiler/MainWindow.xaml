<Window x:Class="_03_App_för_att_öppna_textfiler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03_App_för_att_öppna_textfiler"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <DockPanel>
                <Menu DockPanel.Dock="Top">
                    <MenuItem Header="File">
                        <MenuItem Icon="💾" Header="_Open" Click="open_file_event" />
                        <MenuItem Icon="❌" Header="_Exit" Click="exit_app_event" />
                    </MenuItem>
                    <MenuItem Header="Help"/>
                    <MenuItem Header="About"/>
                </Menu>
            </DockPanel>
            <TextBox x:Name="textFileTextBox" 
                     Text="Min coola textbox" 
                     IsReadOnly="True" 
                     />
        </StackPanel>
    </Grid>
</Window>
